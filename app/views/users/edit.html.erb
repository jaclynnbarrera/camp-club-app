<h1>Edit User</h1>

<%= form_for(@user) do |f| %>
    <label>First Name</label><br>
    <%= f.text_field :first_name %><br>
    <br>
    <label>Last Name</label><br>
    <%= f.text_field :last_name %><br>
    <br>
    <label>Email</label><br>
    <%= f.text_field :email %><br>
    <br>
    <%= f.submit %>
    
<% end %><br>

<%=button_to("Delete User", @user, method: :delete) %>