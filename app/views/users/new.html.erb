<body>
<div class="sign-up-log-in">
<h1>Sign Up</h1>

  <% if flash[:alert] %>
    <div class="notice"><%= flash[:alert] %></div>
  <% end %>

<% @errors && @errors.each do |e|%>
    <li><%=e%></li>
<%end%>

<%= form_for @user, url: signup_path do |f| %>
    <%=f.label "Username"%><br>
    <%= f.text_field :username %><br>
    <br>
    <%=f.label "Password"%><br>
    <%= f.password_field :password %><br>
    <br>
    <%= f.submit "Sign Up" %>
    
<% end %>
<br>
    <%= link_to('Log in with Facebook!', '/auth/facebook') %> 
</div>
</body>