<h1>Sign Up</h1>

<% @errors && @errors.each do |e|%>
    <li><%=e%></li>
<%end%>

<%= form_for(@user) do |f| %>
    <label>First Name</label><br>
    <%= f.text_field :first_name %><br>
    <br>
    <label>Last Name</label><br>
    <%= f.text_field :last_name %><br>
    <br>
    <label>Email</label><br>
    <%= f.text_field :email %><br>
    <br>
    <%= f.submit %>
    
<% end %>