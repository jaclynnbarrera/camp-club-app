    <div>
      <div >
      <%# site title %>
        <a>Camp Club</a>
        <%if current_user %>
        <ul>
          <li><%=link_to "All Campsites", campsites_path%></li>
          <li><%=link_to "New Campsite", new_campsite_path%></li>
          <li><%=link_to "My Profile", user_path(current_user.id)%></li>
          <li><%=button_to "Log Out", logout_path, method: :post %></li>
        </ul>
        <%else%>
        <ul>
        
        <li ><%=link_to "Explore Campsites", campsites_path%></li>
        <li ><%=link_to "Log In", login_path%></li>
        <li "><%=link_to "Sign Up", signup_path%></li>
        </ul>
